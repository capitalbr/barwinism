<% if logged_in? %>
  <script type="text/javascript">
    window.currentUser = <%= render(
      "api/users/user.json.jbuilder",
      user: current_user
    ).html_safe %></script>
<% end %>

<script type="text/javascript">
  window.azureEndpoint = "<%= Rails.application.credentials.azure[:endpoint] %>"
  window.azureKey = "<%= Rails.application.credentials.azure[:key] %>"
</script>

<main id="root">


</main>